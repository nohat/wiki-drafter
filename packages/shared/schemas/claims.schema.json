{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claims Document",
  "type": "object",
  "properties": {
    "article": {
      "type": "string",
      "description": "Article title"
    },
    "rev": {
      "type": "integer",
      "description": "Document revision number"
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^c_\\d+$"
          },
          "section": {
            "type": "string"
          },
          "start": {
            "type": "integer",
            "minimum": 0
          },
          "end": {
            "type": "integer",
            "minimum": 0
          },
          "text": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["statistic", "BLP", "quote", "contentious", "general"]
          },
          "risk": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "requires_inline": {
            "type": "boolean"
          },
          "existing_refs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": ["unsupported", "supported", "pending"]
          },
          "sources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "source_quality": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "as_of": {
            "type": "string",
            "format": "date"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": ["id", "section", "start", "end", "text", "type", "risk", "requires_inline", "existing_refs", "status", "sources"]
      }
    }
  },
  "required": ["article", "rev", "claims"]
}